# ============================================================
# Kalshi Event Trading Bot â€” Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to version control!
# ============================================================

# ---- Kalshi API Credentials ----
# Get these from your Kalshi account dashboard
KALSHI_API_KEY=your_api_key_here
KALSHI_API_SECRET=your_api_secret_here
KALSHI_API_BASE_URL=https://trading-api.kalshi.com/trade-api/v2

# Demo/sandbox environment (use for testing)
# KALSHI_API_BASE_URL=https://demo-api.kalshi.co/trade-api/v2

# ---- Trading Mode ----
# Set to true to run in paper trading mode (no real money)
PAPER_MODE=true

# ---- Database ----
# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://kalshi_bot:your_password@localhost:5432/kalshi_db

# Individual DB settings (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kalshi_db
DB_USER=kalshi_bot
DB_PASSWORD=your_password_here

# ---- Risk Management ----
# Maximum order size in cents (e.g., 500 = $5.00)
MAX_ORDER_SIZE_CENTS=500

# Maximum daily loss limit in cents (e.g., 5000 = $50.00)
DAILY_LOSS_LIMIT_CENTS=5000

# Maximum number of concurrent open positions
MAX_CONCURRENT_POSITIONS=10

# ---- Strategy Settings ----
# Minimum score for a market to be considered tradeable (0.0 to 1.0)
SCORE_THRESHOLD=0.65

# Minimum market volume (in cents) to consider trading
MIN_MARKET_VOLUME=10000

# Scan interval in seconds
SCAN_INTERVAL_SECONDS=60

# ---- Monitoring & Logging ----
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Prometheus metrics port
PROMETHEUS_PORT=8000

# Enable structured JSON logging
STRUCTURED_LOGGING=true

# ---- Notifications (Optional) ----
# Discord webhook for trade alerts
DISCORD_WEBHOOK_URL=

# Telegram bot token and chat ID for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
